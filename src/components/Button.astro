---
interface Props {
  color?: "primary" | "bordered" | "simple";
  text: string;
  size?: "normal" | "small";
}

const { color = "primary", text, size = "normal" } = Astro.props;
---

<button
  class={`rounded-full font-medium px-5 text-sm py-2 ${size == "small" && "px-3 text-xs "} ${color == "primary" && "bg-[#7969E6] text-white"}  ${color == "bordered" && "text-[#7969E6] border border-[#7969E6]"}  ${color == "simple" && "border border-gray-400 bg-white  text-grey-900 "}`}
  type="button">{text}</button
>
